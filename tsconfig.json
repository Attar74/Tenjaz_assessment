{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node", // Use Node.js-style module resolution
    "allowImportingTsExtensions": false, // Prevent TypeScript from requiring `.ts` extensions
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
